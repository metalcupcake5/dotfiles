(defwindow example
    :monitor 0
    :geometry (geometry :x "0%"
                        :y "20px"
                        :width "90%"
                        :height "30px"
                        :anchor "top center")
    :stacking "fg"
    :reserve (struts :distance "40px" :side "top")
    :windowtype "dock"
    :wm-ignore false
spotify)

(defwidget greeter [?text name]
    (box :orientation "horizontal"
            :halign "center"
        text
        (button :onclick "notify-send 'Hello' 'Hello, ${name}'"
        "Greet")))

(defpoll spotify :interval "1s"
:initial "initial-value"  ; optional, defaults to poll at startup
`if [[ $(playerctl status --ignore-player=spotify-qt) == "Playing" ]]; then echo "$(playerctl metadata --format "{{ artist }} - {{ title }}")"; elif [[ $(playerctl status --player=spotify-qt) == "Playing" ]]; then echo "$(playerctl metadata --player=spotify-qt --format "{{ artist }} - {{ title }} from {{ album }}")"; else echo $(playerctl status --player=spotify-qt); fi    `)
